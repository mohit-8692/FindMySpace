<% layout("/layouts/boilerplate")%>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    color: blue;
  }

  .tax-info {
    display: none;
  }

  .tax-switch {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    margin-left: 5rem;
    align-items: center;
    display: flex;
  }

  @media (max-width: 768px) {
    .card-body {
      margin: 1rem;
    }

    .col-md-4,
    .col-md-8 {
      flex: 0 0 100%;
      max-width: 100%;
    }

    .row.g-0 {
      flex-direction: column;
    }

    .img-fluid {
      height: auto;
    }
  }
</style>

<div class="container mt-3">
  <div class="row">
    <% for(let listing of allListings) { %>
      <div class="col-md-8 offset-md-2 mb-3">
        <a href="/listings/<%= listing._id %>" class="listing-link" style="text-decoration: none;">
          <div class="card">
            <div class="row g-0">

              <div class="col-md-4 position-relative">
                <img 
                  src="<%= listing.image.url %>" 
                  class="img-fluid rounded-start" 
                  alt="listing_image" 
                  style="height: 100%; object-fit: cover;"
                />
              </div>

              <div class="col-md-8">
                <div class="card-body m-3">
                  <h4 class="card-title"><%= listing.title %></h4>
                  <p class="truncate-3-lines card-text"><%= listing.description %></p>
                  <p class="card-text"><b>Price:</b> &#8377;<i> <%= listing.price %> </i> Onwards </p>
                  <p class="card-text text-success">&#10003; Best quality food with all facilities</p>
                </div>
              </div>

            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
